<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="@dimen/list_view_item_padding"
    android:paddingBottom="@dimen/list_view_item_padding"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/index_text_view_media_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_view_text_size"/>
    
    <LinearLayout
        android:id="@+id/itemTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >
	    
	    <TextView 
	        android:id="@+id/name_text_view_media_clip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/list_view_text_size"/>
	    
	    <TextView 
	        android:id="@+id/date_time_text_view_media_clip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/list_view_subtext_size"/>
	    
	</LinearLayout>
    
</LinearLayout>
