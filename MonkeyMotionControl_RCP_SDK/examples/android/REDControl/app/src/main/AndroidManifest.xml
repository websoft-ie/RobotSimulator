<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.red.redcontrol"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Red_actionbar" >
        <activity
            android:name="com.red.redcontrol.CameraInfoActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_camera_info" >
        </activity>
        <activity
            android:name="com.red.redcontrol.ConnectActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.red.redcontrol.ControllerActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_controller" >
        </activity>
    </application>

</manifest>
