<Window x:Class="MonkeyMotionControl.SplashScreenWindow"
        x:Name="SplashScreenWindowInternal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonkeyMotionControl"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="580"
        Width="800">
    <StackPanel Orientation="Vertical" Background="#FF3E3E3E" >
        <Image Source="MonkeyMoCo_Splash.png" Width="800" Height="560" />
        <Grid x:Name="ProgressBar" Width="2" Height="20" MaxWidth="{Binding ElementName=SplashScreenWindowInternal, Path=Width}" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Background="#E7B100" />
    </StackPanel>
</Window>
