                <Button x:Name="messageBox_BtnClose" Content="X" Style="{StaticResource MessageBoxCloseButton}" Background="#FFE74646" Foreground="White" Click="btnClose_Click" HorizontalAlignment="Right" Width="58"/>
            </Grid>
        </Grid>

